{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "lib": [
        "ES2022",
        "DOM"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,   /* enable all strict type-checking options */
    /* Additional Checks */
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}